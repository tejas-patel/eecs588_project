{
  "manifest_version": 2,
  "name": "Decompress It!",
  "version": "1.0",
  "description": "Enable/Disable http compression",
  "icons": {
    "48": "icons/off_logo_burned.png",
    "96": "icons/off_logo_burned.png"
  },

  "applications": {
    "gecko": {
      "id": "bookmark-it-extension@mozilla.org",
      "strict_min_version": "47.0a1"
    }
  },

  "permissions": [
    "bookmarks",
    "tabs",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking"
  ],

  "browser_action": {
    "default_icon": "icons/off_logo_burned.png",
    "default_title": "Decompress it!"
  },

  "background": {
    "scripts": ["background.js"]
  }

}
